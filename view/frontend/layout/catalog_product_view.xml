<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block name="faq" template="Inchoo_ProductFaq::product_faq.phtml" group="detailed_info" ifconfig="catalog/product_faq/product_faq_active">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">FAQ</argument>
                    <argument name="sort_order" xsi:type="string">100</argument>
                    <argument name="product_faq" xsi:type="object">Inchoo\ProductFaq\ViewModel\ProductFaq</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
